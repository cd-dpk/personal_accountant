<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorPrimary">
    <include layout="@layout/app_bar"
        android:id="@+id/app_bar"
        />
    <include
        layout="@layout/text_horizontal_line"
        android:id="@+id/activity_transaction_list_text_horizontal_line"
        android:layout_below="@+id/app_bar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"/>
    <LinearLayout
        android:id="@+id/target_person_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_below="@+id/activity_transaction_list_text_horizontal_line"
        android:weightSum="2">
        <TextView
            android:id="@+id/text_view_transaction_list_spinner_label"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/person"/>
        <Spinner
            android:id="@+id/transaction_list_spinner_person"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1.25"
            />
    </LinearLayout>
    <include layout="@layout/card_transactions_net"
        android:id="@+id/view_card_transaction_net"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/target_person_details"
        />
    <include layout="@layout/content_transaction_list"
        android:id="@+id/content_list"
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_card_transaction_net"
        android:layout_above="@+id/lay_bottom_bar"
        />
    <include
        android:id="@+id/lay_bottom_bar"
        layout="@layout/footer"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="5dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"  />
</RelativeLayout>