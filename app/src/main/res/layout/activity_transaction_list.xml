<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@color/colorAccent">

    <include layout="@layout/card_account"
        android:id="@+id/view_card_account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />
    <include layout="@layout/content_transaction_list"
        android:id="@+id/content_list"
        android:layout_width="match_parent"
        android:layout_marginTop="2dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view_card_account"
        android:layout_above="@+id/lay_bottom_bar"
        />
    <include
        android:id="@+id/lay_bottom_bar"
        layout="@layout/footer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/text_length"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"  />
</RelativeLayout>